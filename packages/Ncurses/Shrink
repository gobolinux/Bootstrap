#!/bin/sh

rm -Rf man
rm -Rf include
rm -Rf doc
rm -f  lib/*.a
			
for i in tic toe tack tput infocmp captoinfo infotocap
do
	rm -f bin/$i
done

# keeps only linux, xterm and xterm-color terminfo data
if [ -d Shared/terminfo ]
then
    pushd Shared/terminfo
    for i in [^l\|^x]*
    do
    	rm -Rf $i
    done
    popd

    pushd Shared/terminfo/l
    ls | grep -v linux$ | xargs rm
    popd

    pushd Shared/terminfo/x
    ls | grep -v xterm$ | grep -v xterm-color$ | xargs rm
    popd
fi
